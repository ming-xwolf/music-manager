{
  "python.defaultInterpreterPath": "~/anaconda3/envs/music-manager/bin/python",
  "python.terminal.activateEnvironment": true,
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${workspaceFolder}:${env:PYTHONPATH}",
    "CONDA_DEFAULT_ENV": "music-manager"
  },
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}:${env:PYTHONPATH}",
    "CONDA_DEFAULT_ENV": "music-manager"
  },
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder};${env:PYTHONPATH}",
    "CONDA_DEFAULT_ENV": "music-manager"
  },
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "black",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "basic",
  "files.associations": {
    "*.py": "python"
  },
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.profiles.osx": {
    "music-manager": {
      "path": "/bin/zsh",
      "args": ["-c", "conda activate music-manager && exec zsh"]
    }
  },
  "python.condaPath": "~/anaconda3/bin/conda",
  "python.venvPath": "~/anaconda3/envs",
  "editor.rulers": [80, 100],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true
} 